@{
	<h1>Category List</h1>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>DisplayOrder</th>
				<th>Operations</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var category in Model)
			{
				<tr>
					<td>@category.Id</td>
					<td>@category.Name</td>
					<td>@category.DisplayOrder</td>
					<td><button class="btn btn-outline-info">Update</button>  <button class="btn btn-outline-secondary">Edit</button>  <button class="btn btn-outline-danger">Delete</button></td>
				</tr>
			}
		</tbody>
	</table>
}
